<div>
  <h1 class='display-6 bg-secondary p-5'>Extreme Tech Blog</h1>
</div>

{{#each posts as |post|}}
  <div class='p-5'>
    <a href='/post/{{post.id}}' class='text-decoration-none'>
      <div class='card text-white bg-dark mb-3'>
        <div class='card-header d-flex justify-content-between'>
          <h5>{{post.title}}</h5>
          <p>Posted by:
            {{post.user.name}}
            on
            {{format_date post.date_created}}</p>
        </div>
        <div class='card-body'>
          <p class='card-text'>{{post.content}}</p>
        </div>
      </div>
    </a>
  </div>
{{/each}}