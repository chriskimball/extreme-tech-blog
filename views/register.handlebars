<div>
  <h1 class='display-6 bg-secondary p-5'>Registration Form</h1>
</div>
<div class='p-5'>
  <div class='card text-white bg-dark mb-3'>
    <div class='card-header d-flex justify-content-between'>
      <h2>Please enter your information</h2>
    </div>
    <div class='card-body'>
      <form class='form signup-form' id='signup-form'>
        <div class='mb-3'>
          <label for='name-signup' class='form-label'>Name</label>
          <input type='text' class='form-control' id='name-signup' />
        </div>
        <div class='mb-3'>
          <label for='email-signup' class='form-label'>Email address</label>
          <input type='email' class='form-control' id='email-signup' aria-describedby='emailHelp' />
          <div id='emailHelp' class='form-text'>We'll never share your email with anyone else.</div>
        </div>
        <div class='mb-3'>
          <label for='password-signup' class='form-label'>Password</label>
          <input type='password' class='form-control' id='password-signup' />
        </div>
        <button type='submit' class='btn btn-primary'>Submit</button>
      </form>
    </div>
  </div>
</div>
<script src='./js/register.js'></script>